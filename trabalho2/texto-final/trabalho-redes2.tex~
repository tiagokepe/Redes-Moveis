\title{Segurança em \textit{Vehicular Ad-hoc Networks}}

\author{Antonio Carlos S. Furtado Jr.\inst{1}, Tiago R. Kepe\inst{1} }


\address{Departamento de Informática -- Universidade Federal do Paraná
  (UFPR)\\
